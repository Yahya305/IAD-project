generator client {
    provider = "prisma-client-js"
}

datasource db {
    provider = "postgresql"
    url      = env("DATABASE_URL")
}

model Teacher {
    id       Int    @id @default(autoincrement())
    name     String
    email    String @unique()
    password String
}

model Student {
    studentId     String          @id @default(uuid())
    seatNo        String          @unique()
    name          String
    email         String          @unique()
    password      String
    teamId        String
    Team          Team            @relation(fields: [teamId], references: [teamId])
    ChallegeScore ChallegeScore[]
}

model Team {
    teamId  String    @id @default(uuid())
    Student Student[]
}

model Challenge {
    challengeId     String          @id @default(uuid())
    challengeNumber Int
    ChallegeScore   ChallegeScore[]
}

model ChallegeScore {
    challengeScoreId String    @id @default(uuid())
    studentId        String
    challengeId      String
    Student          Student   @relation(fields: [studentId], references: [studentId])
    Challenge        Challenge @relation(fields: [challengeId], references: [challengeId])
}

